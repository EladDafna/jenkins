pipeline {
    agent {
        label 'master'
    }
    stages {
        stage('Build') {
            steps {
                echo 'Running on any agent'
                sh 'echo Building...'
            }
        }
        stage('Test') {
            steps {
                echo 'Running tests...'
                sh 'echo Tests are running'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying...'
                sh 'echo Deployment in progress'
            }
        }
    }
}
