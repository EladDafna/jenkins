pipeline {
    agent {
        label "linux"
    }
    parameters {
        string(name: 'Name', defaultValue: 'Eladd', description: 'Enter Your Name')
    }
    stages {
        stage("Test-1") {
            steps {
                sh """
                    mkdir newdir2
                    echo Success >> newdir2/newfile.txt
                    echo "Hello, ${params.Name}"
                   """
            }
        }
    }
}
