pipeline {
    agent {
        label "linux"
    }
    environment {
        PROJECT_NAME = "Test-Project"
        OWNER_NAME   = "Elad"
    }
    stages {
        stage("Test-1") {
            steps {
                sh 'exit 1' // הוספתי פקודה שתכשיל את הפייפליין
            }
        }
    }
    post {
        always {
            echo 'Always say Hello again!'
        }
        success {
            echo 'The Pipeline was successful!'
        }
        failure {
            script {
                mail to: 'eladdaf@gmail.com', 
                    subject: "The Pipeline ${PROJECT_NAME} failed :(", 
                    body: "The ${PROJECT_NAME} pipeline has failed. Please check the Jenkins console output for more information."
            }
        }
    }
}
