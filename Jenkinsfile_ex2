pipeline {
    agent {
        label "linux"
    }
    parameters {
        string(name: 'Name', defaultValue: 'Eladd', description: 'Enter Your Name')
    }
    stages {
        stage("Test-1") {
            steps {
                sh 'echo "Build Information" > build_info.txt'
            }
        }
    }
    post {
        always {
            archiveArtifacts artifacts: 'build_info.txt', onlyIfSuccessful: true
        }
    }
}
